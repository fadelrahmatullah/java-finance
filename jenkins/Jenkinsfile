pipeline {
    agent any

    environment {
        // Define any environment variables here if necessary
        MVN_HOME = tool 'Maven'
        JAVA_HOME = tool 'JDK 11'
    }

    stages {
        stage('Checkout') {
            steps {
                // Clone the code from GitHub
                git 'https://github.com/fadelrahmatullah/java-finance.git'
            }
        }

        stage('Build') {
            steps {
                // Build the application using Maven
                sh "${MVN_HOME}/bin/mvn clean package"
            }
        }

        stage('Test') {
            steps {
                // Run unit tests (optional)
                sh "${MVN_HOME}/bin/mvn test"
            }
        }

        stage('Deploy') {
            steps {
                // Deploy the application (define your deployment steps here)
                echo 'Deployment process goes here'
                // Example: copy the JAR file to a deployment directory or server
                // sh 'scp target/*.jar user@server:/path/to/deploy'
            }
        }
    }

    post {
        always {
            // Clean up workspace or any additional tasks
            cleanWs()
        }
    }
}
